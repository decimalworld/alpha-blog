<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/error', obj: @user %>
            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row mb-3">
                    <%= f.label :username, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username"%>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <%= f.label :email, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter a email" %>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <%= f.label :password, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Choose a password" %>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <%= f.submit (@user.new_record? ? "Sign up" : "Update account"), class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
<%= link_to "[ Cancel and return to article listing ]", articles_path, class: "d-flex justify-content-center text-info mb-3" %>