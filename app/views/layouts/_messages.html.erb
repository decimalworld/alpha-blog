<% if flash.any? %>
    <div class="container">
    <% flash.each do |name, msg| %>
        <div class="alert alert-<%=name=="alert" ? "danger":"success"%> fade show alert-dismissible" role="alert">
            <%=msg%>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% end %>
    </div>
<% end %>