<% if flash.any? %>
    <div class="container">
        <div class="alert alert-success fade show alert-dismissible" role="alert">
            <% flash.each do |name, msg| %>
                <%=msg%>
            <% end %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% end %>